
<p>
  <%= image_tag @animal.foto.url(:medium) %>
  <%= @animal.descricao %>
</p>

<p>
  <b>Raca:</b>
  <%= @animal.raca %>
</p>

<p>
  <b>Idade:</b>
  <%= @animal.idade %>
</p>

<p>
  <b>Pelagem:</b>
  <%= @animal.pelagem %>
</p>

<p>
  <b>Especie:</b>
  <%= @animal.especie.descricao %>
</p>

<p>
  <b>Instituição:</b>
  <%= @animal.instituicao.nome %>
</p>





<%= link_to 'Editar', edit_animal_path(@animal) %> |
<%= link_to 'Voltar', animals_path %> |
<%= link_to 'Excluir', @animal, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este animal?' } %>
