<%= form_for(@animal, :html => { :multipart => true }) do |f| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :raca %><br />
    <%= f.text_field :raca %>
  </div>
  <div class="field">
    <%= f.label :idade %><br />
    <%= f.number_field :idade %>
  </div>
  <div class="field">
    <%= f.label :pelagem %><br />
    <%= f.text_field :pelagem %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </div>


  <div class="field">
    <%= f.label :especie_id %><br />
    <%= f.select :especie_id, @especies.collect { |e| [ e.descricao, e.id ] }, {:prompt => 'Selecione a Espécie'} %>
  </div>

    

  <div class="field">
    <%= f.label :instituicao_id %><br />
    <%= f.select :instituicao_id, @instituicoes.collect { |i| [ i.nome, i.id ] }, {:prompt => 'Selecione a Instituição'} %>
  </div>

  
  <div class="field">
    <%= f.label :foto %><br />
    <%= f.file_field :foto %>
  </div>
    

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
